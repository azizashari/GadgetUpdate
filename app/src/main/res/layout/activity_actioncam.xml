<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_actioncam"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="azizashari.gadgetupdate.Actioncam">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bgr1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:weightSum="1">

                    <TextView
                        android:text="ACTION CAMERA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:textStyle="normal|bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="162dp"
                        app:srcCompat="@drawable/xiaomiyi"
                        android:id="@+id/imageView6"
                        android:layout_weight="0.59" />

                    <TextView
                        android:text="Xiaomi Yi 4K"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:text="Yi 4K Action Camera merupakan action camera dari Xiaomi yang dapat merekam video resolusi 4K pada 30fps, 2K pada 30fps, serta 1.440p pada 60fps. Yi 4K Action Camera cukup mumpuni dibekali resolusi 12 megapiksel dengan sensor Sony IMX377. "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textSize="16sp"
                        android:textStyle="normal|bold"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:text="Sudut pandang yang dimiliki oleh action cam ini seluas 155 derajat dengan tujuh layer lensa dan bukaan f/2.8. Selain itu, Yi 4K Action Camera juga dilengkapi dengan six-axis gyroscope dan EIS. Harga action camera ini sekitar Rp3.500.000. "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:textSize="16sp"
                        android:textStyle="normal|bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
