<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="azizashari.gadgetupdate.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@drawable/bgr1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="0.09" />

        <Button
            android:text="SMARTPHONE"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/button"
            android:layout_weight="0.12"
            android:layout_width="184dp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:fontFamily="monospace"
            android:textSize="17sp"
            android:onClick="klikButton1" />

        <Button
            android:text="NOTEBOOK"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="0.12"
            android:textAlignment="center"
            android:layout_width="184dp"
            android:textStyle="normal|bold"
            android:fontFamily="monospace"
            android:textSize="17sp"
            android:onClick="klikButton2" />

        <Button
            android:text="DRONE"
            android:layout_gravity="center"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="0.12"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:fontFamily="monospace"
            android:textSize="17sp"
            android:onClick="klikButton3" />

        <Button
            android:text="SMART WATCH"
            android:layout_gravity="center"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="0.12"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:fontFamily="monospace"
            android:textSize="17sp"
            android:onClick="klikButton4" />

        <Button
            android:text="ACTION CAMERA"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_weight="0.12"
            android:textAlignment="center"
            android:layout_width="184dp"
            android:textStyle="normal|bold"
            android:fontFamily="monospace"
            android:textSize="17sp"
            android:onClick="klikButton5" />

        <Button
            android:text="CREDIT"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_weight="0.12"
            android:layout_width="184dp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:fontFamily="monospace"
            android:textSize="17sp"
            android:onClick="klikButton6" />
    </LinearLayout>
</RelativeLayout>
